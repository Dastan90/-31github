a = 12
b = 7
res = a if a > b else b
print(res)

s = "python"
t = "upper"
res = s.upper() if t == "upper" else s
print(res)

b = 7
a = 12
res = [1, 2, a if a < b else b, 4, 5]
print(res)

print("a - " + ("chetnoe" if a % 2 == 0 else "nechetnoe") + " chislo")

print(max(1, 5, a if a > 0 else b, 4, 5))

a = 2
b = 3
c = 4

d = (a if a > c else c) if a > b else (b if b > c else c)
print(d)
